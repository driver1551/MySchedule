<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:id="@+id/COLUMN_START_TEXT"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_margin="16dp"
        android:text="Время"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/COLUMN_END_TEXT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Процедура"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/COLUMN_START_TEXT" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/database_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="11:00"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_START_TEXT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/database_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Наименование"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/COLUMN_END_TEXT"
        app:layout_constraintTop_toBottomOf="@id/database_start" />

    <TextView
        android:id="@+id/COLUMN_NAME_TEXT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Клиент"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/COLUMN_END_TEXT" />

    <TextView
        android:id="@+id/database_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Имя"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_NAME_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/database_procedure" />

    <TextView
        android:id="@+id/COLUMN_PHONE_NAME"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Телефон"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/COLUMN_NAME_TEXT" />

    <TextView
        android:id="@+id/database_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="8 800 123 45 67"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_PHONE_NAME"
        app:layout_constraintTop_toBottomOf="@id/database_name" />

    <TextView
        android:id="@+id/COLUMN_MISC_NAME"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Комментарии"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/COLUMN_PHONE_NAME" />

    <TextView
        android:id="@+id/database_misc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="..."
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_MISC_NAME"
        app:layout_constraintTop_toBottomOf="@id/database_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>