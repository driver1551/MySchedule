<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/recycler_view_background_pink"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/client_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_people_alt_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/client_constraint_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/client_constraint_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/client_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/client_name_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/example_client"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/client_phone_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/example_phone"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/call_client_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_name_search" />

        <ImageButton
            android:id="@+id/call_client_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_call_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/client_phone_search"
            app:layout_constraintTop_toBottomOf="@id/client_name_search" />

        <TextView
            android:id="@+id/client_vk_link_tw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/vk_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/vk_logo_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/call_client_button" />

        <TextView
            android:id="@+id/client_telegram_link_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/telegram_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/telegram_logo_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/telegram_logo_imageButton" />

        <TextView
            android:id="@+id/client_instagram_link_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/instagram_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/instagram_logo_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telegram_logo_imageButton" />

        <TextView
            android:id="@+id/client_whatsapp_link_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/whatsapp_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/whatsapp_logo_imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_logo_imageButton" />

        <TextView
            android:id="@+id/client_notes_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/example_misc"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/whatsapp_logo_imageButton" />

        <ImageButton
            android:id="@+id/vk_logo_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vk_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/client_vk_link_tw"
            app:layout_constraintTop_toBottomOf="@id/call_client_button" />

        <ImageButton
            android:id="@+id/telegram_logo_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/telegram_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/client_telegram_link_tv"
            app:layout_constraintTop_toBottomOf="@id/vk_logo_imageButton" />

        <ImageButton
            android:id="@+id/instagram_logo_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/client_instagram_link_tv"
            app:layout_constraintTop_toBottomOf="@id/telegram_logo_imageButton" />

        <ImageButton
            android:id="@+id/whatsapp_logo_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whatsapp_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/client_whatsapp_link_tv"
            app:layout_constraintTop_toBottomOf="@id/instagram_logo_imageButton" />

    </androidx.constraintlayout.widget.ConstraintLayout> <!--Appointment params-->

</androidx.constraintlayout.widget.ConstraintLayout>