<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:textStyle="bold"
        android:id="@+id/COLUMN_START_TEXT"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_margin="16dp"
        android:text="Время"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/appointment_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="11:00"
        android:textColor="@color/blue_main"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_START_TEXT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/COLUMN_NAME_TEXT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Клиент"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/COLUMN_START_TEXT" />

    <TextView
        android:id="@+id/appointment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Имя"
        android:textColor="@color/blue_main"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_NAME_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/appointment_start" />

</androidx.constraintlayout.widget.ConstraintLayout>