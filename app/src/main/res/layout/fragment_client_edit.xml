<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    tools:context=".presentation.clients.editClient.ClientEditFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/client_avatar_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/client_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/client_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/photo_camera"
                app:layout_constraintBottom_toBottomOf="@+id/client_avatar"
                app:layout_constraintEnd_toEndOf="@+id/client_avatar" />

            <EditText
                android:id="@+id/client_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Введите имя клиента"
                android:imeOptions="actionDone"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:src="@drawable/rectangle_2"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/client_appointments_and_stats_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_avatar_cl">

            <ImageButton
                android:id="@+id/show_all_appointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/appointments_icon"
                app:layout_constraintBottom_toBottomOf="@+id/show_all_appointments"
                app:layout_constraintStart_toStartOf="@+id/show_all_appointments"
                app:layout_constraintTop_toTopOf="@+id/show_all_appointments" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Все записи"
                app:layout_constraintBottom_toBottomOf="@+id/show_all_appointments"
                app:layout_constraintEnd_toEndOf="@+id/show_all_appointments"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/show_all_appointments" />

            <ImageButton
                android:id="@+id/show_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/statistic_icon"
                app:layout_constraintBottom_toBottomOf="@+id/show_stats"
                app:layout_constraintStart_toStartOf="@+id/show_stats"
                app:layout_constraintTop_toTopOf="@+id/show_stats" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статистика"
                app:layout_constraintBottom_toBottomOf="@+id/show_stats"
                app:layout_constraintEnd_toEndOf="@+id/show_stats"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/show_stats" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/client_sm_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rectangle_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/client_appointments_and_stats_cl">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/phone_icon"
                app:layout_constraintBottom_toTopOf="@+id/client_vk_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/client_phone_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Номер телефона"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/rectangle_2"
                android:textColor="@color/hyperlink"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phone_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/vk_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/vk_logo"
                app:layout_constraintBottom_toTopOf="@+id/client_instagram_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_phone_et" />

            <EditText
                android:id="@+id/client_vk_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Адрес страницы Вконтакте"
                android:imeOptions="actionDone"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/rectangle_2"
                android:textColor="@color/hyperlink"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vk_icon"
                app:layout_constraintTop_toBottomOf="@+id/client_phone_et" />

            <ImageView
                android:id="@+id/instagram_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/instagram_logo"
                app:layout_constraintBottom_toTopOf="@+id/client_tg_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_vk_et" />

            <EditText
                android:id="@+id/client_instagram_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Адрес страницы Instagram"
                android:imeOptions="actionDone"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/rectangle_2"
                android:textColor="@color/hyperlink"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/instagram_icon"
                app:layout_constraintTop_toBottomOf="@+id/client_vk_et" />

            <ImageView
                android:id="@+id/tg_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/telegram_logo"
                app:layout_constraintBottom_toTopOf="@+id/client_whatsapp_et"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_instagram_et" />

            <EditText
                android:id="@+id/client_tg_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Telegram"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/rectangle_2"
                android:textColor="@color/hyperlink"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tg_icon"
                app:layout_constraintTop_toBottomOf="@+id/client_instagram_et" />

            <ImageView
                android:id="@+id/whatsapp_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/whatsapp_logo"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_tg_et" />

            <EditText
                android:id="@+id/client_whatsapp_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rectangle_2"
                android:hint="Whatsapp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/rectangle_2"
                android:textColor="@color/hyperlink"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/whatsapp_icon"
                app:layout_constraintTop_toBottomOf="@+id/client_tg_et" />

            <ImageView
                android:id="@+id/note_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/note"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/client_whatsapp_et" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/note_icon"
                app:layout_constraintTop_toBottomOf="@+id/client_whatsapp_et">

                <EditText
                    android:id="@+id/client_note_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_2"
                    android:fadeScrollbars="false"
                    android:focusable="true"
                    android:hint="Заметки"
                    android:imeOptions="actionDone"
                    android:maxLines="5"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:scrollbars="vertical"
                    android:textSize="20sp" />

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <ImageView
                    android:id="@+id/edit_client_bottom_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/edit_client_bottom_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/client_sm_cl" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>