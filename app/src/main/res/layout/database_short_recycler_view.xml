<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/COLUMN_START_TEXT"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_margin="16dp"
        android:text="@string/time"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointment_start_short"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/time"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/COLUMN_START_TEXT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/COLUMN_NAME_TEXT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/client"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/COLUMN_START_TEXT" />

    <TextView
        android:id="@+id/appointment_name_short"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/client"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/COLUMN_NAME_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/appointment_start_short" />

    <ImageView
        android:id="@+id/border_line_appointment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="8dp"
        android:layerType="software"
        android:src="@drawable/border_line_horizontal"
        app:layout_constraintTop_toBottomOf="@id/COLUMN_NAME_TEXT" />

</androidx.constraintlayout.widget.ConstraintLayout>