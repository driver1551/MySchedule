<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProjectNailsSchedule" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/purple_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pink" parent="Theme.MaterialComponents.Light">

        <!-- The primary branding color for the app. By default, this is the color applied to the
     action bar background. -->
        <item name="colorPrimary">@color/Pink5</item>

        <!--A lighter/darker variant of your primary brand color, used sparingly in theming-->
        <item name="colorPrimaryVariant">@color/Pink2</item>
        <!--The color used for elements displayed on top of your primary colors (eg. Text and icons, often white or semi-transparent black depending on accessibility)-->
        <item name="colorOnPrimary">@color/white</item>

        <!--The secondary brand color of your app, used mostly as an accent for certain widgets that need to stand out-->
        <item name="colorSecondary">@color/Pink3</item>
        <!--A lighter/darker variant of your secondary brand color, used sparingly in theming-->
        <item name="colorSecondaryVariant">@color/Pink4</item>
        <!--The color used for elements displayed on top of your secondary colors-->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Pink5</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:windowBackground">@drawable/window_background_pink</item>

    </style>
</resources>